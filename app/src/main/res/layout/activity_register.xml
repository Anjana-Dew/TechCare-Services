<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f172a"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="144dp"
        android:layout_height="114dp"
        android:layout_marginTop="41dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/techcare_logo" />

    <EditText
        android:id="@+id/txtFullName"
        android:layout_width="319dp"
        android:layout_height="47dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/bg_tv_rounded"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Full Name...."
        android:inputType="text"
        android:textColorHint="#7FEBE3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/txtPH"
        android:layout_width="319dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_tv_rounded"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Phone Number..."
        android:inputType="text"
        android:textColorHint="#7FEBE3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

    <EditText
        android:id="@+id/txtAddress"
        android:layout_width="319dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_tv_rounded"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Address..."
        android:inputType="text"
        android:textColorHint="#7FEBE3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPH" />

    <EditText
        android:id="@+id/txtPass"
        android:layout_width="319dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_tv_rounded"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint=" Password..."
        android:inputType="text"
        android:textColorHint="#7FEBE3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAddress" />

    <EditText
        android:id="@+id/txtConfirmPass"
        android:layout_width="319dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_tv_rounded"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Confirm Password"
        android:inputType="text"
        android:textColorHint="#7FEBE3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPass" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="319dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_tv_rounded"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Email...."
        android:inputType="text"
        android:textColorHint="#7FEBE3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFullName" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="201dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#14b8a6"
        android:fontFamily="@font/poppins_semibold"
        android:text="Sign-Up"
        android:textColor="#f3f4f6"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtConfirmPass"
        app:rippleColor="#f59e0b" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="213dp"
        android:layout_height="30dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Alredy have an account? "
        android:textColor="#f3f4f6"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tvLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUp" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Login"
        android:textColor="#f59e0b"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUp" />

</androidx.constraintlayout.widget.ConstraintLayout>