<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f172a"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0f172a"
        app:layout_collapseMode="pin"
        app:navigationIcon="@drawable/ic_back"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:text="Repair Request"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tvServiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:textColor="#f3f4f6"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvServicePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:textColor="#f3f4f6"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etIssueDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_tv_rounded"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="top"
        android:hint="Describe the issue"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:textColor="#f3f4f6"
        android:textColorHint="#7FEBE3E3" />

    <Button
        android:id="@+id/btnUploadPhoto"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Upload Issue Photo (Optional)"
        android:textColor="#f3f4f6"
        app:strokeColor="#f59e0b"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnSubmitRequest"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Submit Repair Request"
        android:textColor="#f3f4f6"
        app:rippleColor="#f59e0b" />
</LinearLayout>
