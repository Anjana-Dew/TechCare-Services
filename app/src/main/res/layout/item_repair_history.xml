<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#020617"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvRequestId"
            android:text="Request #1023"
            android:textColor="#38bdf8"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCustomerName"
            android:layout_marginTop="6dp"
            android:text="Customer Name"
            android:textColor="#f59e0b"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvServiceInfo"
            android:layout_marginTop="4dp"
            android:text="Screen Replacement"
            android:textColor="#e5e7eb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCompletedDate"
            android:layout_marginTop="4dp"
            android:text="Completed on: 2025-01-20"
            android:textColor="#94a3b8"
            android:textSize="12sp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
