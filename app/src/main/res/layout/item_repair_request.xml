<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#020617"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textColor="#f59e0b"
            android:textSize="16sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tvServiceInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Phone Screen Replacement - iPhone 11"
            android:textColor="#e5e7eb"/>


        <TextView
            android:id="@+id/tvRequestedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Requested on: 2025-01-10"
            android:textColor="#94a3b8"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/tvServiceMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Service Method: Pickup"
            android:textColor="#38bdf8"
            android:fontFamily="@font/poppins_medium" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#dc2626"
                android:text="Reject"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#16a34a"
                android:text="Accept"
                android:textColor="#ffffff"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
