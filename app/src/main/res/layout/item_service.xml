<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardBackgroundColor="#020617"
    app:cardCornerRadius="14dp"

    app:cardElevation="4dp"
    app:checkedIconVisible="false"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvServiceName"
            android:text="Screen Replacement"
            android:textColor="#14b8a6"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvServicePrice"
            android:text="Rs. 4500"
            android:textColor="#f3f4f6"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvServiceDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Fix cracked or damaged screen"
            android:textAlignment="center"
            android:textColor="#cbd5f5"
            android:textSize="12sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvServiceDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â± ~2 hours"
            android:textColor="#94a3b8"
            android:textSize="11sp"
            android:layout_marginTop="6dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

